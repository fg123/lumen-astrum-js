{
  "name": "lumen-astrum",
  "version": "1.0.0",
  "description": "Top down turn based RTS game",
  "scripts": {
    "build-client": "browserify client/index.js -o client/dist/main.js -t brfs -t [ babelify --presets [ @babel/preset-env ] ]",
    "watch-client": "watchify --debug client/index.js -o client/dist/main.js -t brfs -t [ babelify --presets [ @babel/preset-env ] ]",
    "start-server": "node -r dotenv/config server/index.js",
    "watch-server": "nodemon -r dotenv/config --watch server --watch shared server/index.js",
    "dev": "concurrently --kill-others 'npm:watch-client' 'npm:watch-server'",
    "prod": "npm run build-client && npm run build-server && NODE_ENV=production npm run start-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fg123/lumen-astrum.git"
  },
  "author": "Felix Guo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fg123/lumen-astrum/issues"
  },
  "dependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "babelify": "^10.0.0",
    "brfs": "^2.0.1",
    "browserify": "^16.2.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "jquery-browserify": "^1.8.1",
    "jquery-mousewheel": "^3.1.13",
    "mongodb": "^3.1.10",
    "nodemon": "^1.18.6",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "tinyqueue": "^2.0.0"
  },
  "homepage": "https://github.com/fg123/lumen-astrum#readme",
  "devDependencies": {
    "concurrently": "^4.0.1",
    "eslint": "^5.7.0",
    "jshint": "^2.9.6",
    "prettier-eslint": "^8.8.2",
    "watchify": "^3.11.0"
  }
}
